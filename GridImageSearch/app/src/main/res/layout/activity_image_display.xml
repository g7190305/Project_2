    android:layout_height="wrap_content"
    tools:context="com.example.g7190305.gridimagesearch.activities.ImageDisplayActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivImageResult"
